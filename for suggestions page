        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        const foodItem = getQueryParam('food');
        const suggestion = pairings[foodItem];

        if (suggestion) {
            document.getElementById('result').innerText = `Try pairing "${foodItem}" with ${suggestion.pairing}.`;
            document.getElementById('suggestionImage').src = suggestion.image;
            document.getElementById('suggestionImage').alt = `Pairing of ${foodItem} with ${suggestion.pairing}`;
        } else {
            document.getElementById('result').innerText = `Sorry, no specific suggestion available for "${foodItem}". Try pairing it with common items like bread, cheese, fruits, vegetables, or wine.`;
            document.getElementById('suggestionImage').src = ''; // Clear image if no suggestion
        }
